<div class="container-fluid">
	<div class="row">
		<div class="col col-6 mx-auto">
			<%= form_tag url_for(action: 'update'), method: "patch", class: "mt-4" do %>

			<b><%= label_tag 'Prénom' %></b>
			<%= text_field_tag 'first_name', @user.first_name, class: "form-control"  %>
			<br />

			<b><%= label_tag 'Nom' %></b>
			<%= text_field_tag 'last_name', @user.last_name, class: "form-control"  %>
			<br />

			<%= submit_tag "Éditer", class: "btn btn-primary mb-3" %>

			<% end %>

		</div>
	</div>
	<div class="row">
		<div class="col col-6 mx-auto mt-5">
			<p> Éditer les informations liées à mon compte (mot de passe, adresse mail)</p>
			<%= link_to "Éditer mot de passe / email", edit_user_registration_path, class: "btn btn-sm btn-primary" %>
		</div>
	</div>
	
	<div class="row">
    <div class="col col-6 mx-auto mt-5">
      <hr>
      <i class="fas fa-trash-alt text-danger"></i>
      <%=link_to "Supprimer mon compte", user_path(@user), method: :delete, data: { confirm: 'Êtes-vous sûr(e) ? La suppression du compte est définitive.' }, class: "text-danger" %>
    </div>
  </div>
</div>